<div class="container">
<div id="login-form">
  
  <h2><i class=" large material-icons prefix">account_box</i>Log In</h2>
  <form action="/auth/login" method="POST">
    <div class="input-field col s6">
          <i class="material-icons prefix">account_circle</i>
          <input name="username" id="icon_prefix" type="text" class="validate">
          <label for="icon_prefix">Your user name</label>
    </div>
    <div class="input-field col s6">
          <i class="material-icons prefix">email</i>
          <input name="email" id="icon_prefix" type="email" class="validate">
          <label for="icon_prefix">Your email</label>
    </div>
    <div class="input-field col s6">
          <i class="material-icons prefix">dialpad</i>
          <input name="password" id="icon_prefix" type="password" class="validate">
          <label for="icon_prefix">Your password</label>
    </div>
    <button class="btn-large teal" type="submit">Log In <i class="large material-icons prefix">near_me</i>
    </button>


    {{#if errorMessage}}
      <p class="error">{{errorMessage}}</p>
    {{/if}}
  </form>
</div>
</div>